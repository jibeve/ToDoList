<%- include("header") -%>

<body>

    <div class="box" id="heading">
        <h1> <%= listTitle %></h1>
    </div>

    <div class="box">
        <div>
            <% for(i=0; i <newListItems.length; i++){ %>
                <div class="item">
                    <input type="checkbox">
                    <p><%= newListItems[i]; %></p>
                </div>
            <% } %>

            <form action="/" method="post">
                <input type="text" name="newItem" placeholder="Things to add" autocomplete="off">
                <button type="submit" name="list" value=<%= listTitle%>>+</button>
            </form> 
                
        </div>
    </div>


    <%- include("footer") -%>


</body>
</html>